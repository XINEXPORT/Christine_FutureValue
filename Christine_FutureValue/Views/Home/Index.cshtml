@model FutureValueModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
    <head>
        <meta name = "viewport" content="width=device-width"/>
        <title>Home Page</title>
        <style>

        </style>
    </head>
    <body>
        <h1>Future Values Calculator</h1>
        <form asp-action = "Index" method = "post">
            <div>
                <label asp-for = "MonthlyInvestment"> Monthly Investment Rate</label>
